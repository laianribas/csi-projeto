{
    "openapi": "3.0.0",
    "info": {
        "title": "API de gerenciamento de manutenção em informática",
        "description": "Essa API tem como objetivo gerenciar as manipulações no banco de dados do serviço SIGMAINFO",
        "contact": {
            "email": "laian67a@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [{
        "url": "http://localhost:5000",
        "description": "API de desenvolvimento"
    }],
    "paths": {
        "/": {
            "post": {
                "summary": "Efetuar login no sistema",
                "description": "Rota responsável por realizar login no sistema",
                "tags": ["Login"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schema/Login"
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "login e/ou senha inválido!"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "token": {
                                            "type": "string"
                                        },
                                        "userId": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schema": {
            "Login": {
                "type": "object",
                "properties": {
                    "login": {
                        "type": "string"
                    },
                    "senha": {
                        "type": "string"
                    }
                }
            }
        }
    }
}