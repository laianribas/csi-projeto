generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Setor {
  id           Int                  @id @default(autoincrement())
  nome         String
  ramal        String?
  descricao    String?
  ativo        Boolean              @default(true)
  chamados     Chamado[]
  Funcionarios FuncionarioOnSetor[]
}

model Funcionario {
  id              String               @id @default(uuid())
  nome            String
  cargo           Cargo?               @relation(fields: [cargoId], references: [id])
  cargoId         Int?
  login           String
  senha           String
  primeiro_acesso Boolean              @default(true)
  campus          String
  ativo           Boolean              @default(true)
  chamados        Chamado[]
  setores         FuncionarioOnSetor[]
}

model Cargo {
  id          Int                @id @default(autoincrement())
  nome        String
  permissao   PermissaoOnCargo[]
  Funcionario Funcionario[]
}

model Permissao {
  id               Int                @id @default(autoincrement())
  descricao        String
  PermissaoOnCargo PermissaoOnCargo[]
}

//relat√≥rio
model Chamado {
  id            String            @id @default(uuid())
  destinatario  String
  area          String
  descricao     String
  tombo         String
  status        StatusOnChamado[]
  avaliacao     String?
  setor         Setor             @relation(fields: [setorId], references: [id])
  setorId       Int
  funcionario   Funcionario       @relation(fields: [funcionarioId], references: [id])
  funcionarioId String
}

model Status {
  id              Int               @id @default(autoincrement())
  descricao       String
  StatusOnChamado StatusOnChamado[]
}

model StatusOnChamado {
  chamado   Chamado  @relation(fields: [chamadoId], references: [id])
  chamadoId String
  status    Status   @relation(fields: [statusId], references: [id])
  statusId  Int
  createdAt DateTime @default(now())

  @@id([chamadoId, statusId])
}

model FuncionarioOnSetor {
  setor         Setor       @relation(fields: [setorId], references: [id])
  setorId       Int
  Funcionario   Funcionario @relation(fields: [funcionarioId], references: [id])
  funcionarioId String

  @@id([setorId, funcionarioId])
}

model PermissaoOnCargo {
  cargo       Cargo     @relation(fields: [cargoId], references: [id])
  cargoId     Int
  permissao   Permissao @relation(fields: [permissaoId], references: [id])
  permissaoId Int

  @@id([cargoId, permissaoId])
}
