generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Setor {
  id           String               @id @default(uuid())
  nome         String
  ramal        String?
  descricao    String?
  ativo        Boolean              @default(true)
  chamados     Chamado[]
  Funcionarios FuncionarioOnSetor[]
}

model Funcionario {
  id              String               @id @default(uuid())
  nome            String
  nivel_acesso    String
  login           String
  senha           String
  primeiro_acesso Boolean              @default(true)
  campus          String
  ativo           Boolean              @default(true)
  chamados        Chamado[]
  setores         FuncionarioOnSetor[]
}

//relat√≥rio
model Chamado {
  id            String            @id @default(uuid())
  destinatario  String
  area          String
  descricao     String
  tombo         String
  status        StatusOnChamado[]
  avaliacao     String?
  setor         Setor             @relation(fields: [setorId], references: [id])
  setorId       String
  funcionario   Funcionario       @relation(fields: [funcionarioId], references: [id])
  funcionarioId String
}

model Status {
  id              String            @id
  descricao       String
  updatedAt       DateTime          @updatedAt
  StatusOnChamado StatusOnChamado[]
}

model StatusOnChamado {
  chamado   Chamado @relation(fields: [chamadoId], references: [id])
  chamadoId String
  status    Status  @relation(fields: [statusId], references: [id])
  statusId  String

  @@id([chamadoId, statusId])
}

model FuncionarioOnSetor {
  setor         Setor       @relation(fields: [setorId], references: [id])
  setorId       String
  Funcionario   Funcionario @relation(fields: [funcionarioId], references: [id])
  funcionarioId String

  @@id([setorId, funcionarioId])
}
